<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MyCalculator.Calculationpoint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/currv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="right"
                android:text="0"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/writnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:text="43+43+43" />
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:layout_marginBottom="20dp"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="0" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/perc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap1"


                android:layout_margin="17dp"
                android:layout_weight="1"
                android:text="%"
                android:textSize="25dp"
                android:textStyle="bold"

                >

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap1"
                android:layout_margin="17dp"
                android:layout_weight="1"
                android:text="CE"
                android:textSize="25dp"
                android:textStyle="bold"
                >

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap1"
                android:layout_margin="17dp"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="25dp"
                android:textStyle="bold"
                >

            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap1"
                android:layout_margin="17dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="25dp"
                android:textStyle="bold"
                >

            </Button>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/fr7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"


                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="25dp"
                    android:textStyle="bold"

                    >

                </Button>
                <Button
                    android:id="@+id/fr8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
                <Button
                    android:id="@+id/fr9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
                <Button
                    android:id="@+id/multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="x"

                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/fr4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"


                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="25dp"
                    android:textStyle="bold"

                    >

                </Button>
                <Button
                    android:id="@+id/fr5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
                <Button
                    android:id="@+id/fr6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
                <Button
                    android:id="@+id/sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/fr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"


                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="25dp"
                    android:textStyle="bold"

                    >

                </Button>
                <Button
                    android:id="@+id/fr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
                <Button
                    android:id="@+id/fr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
                <Button
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"


                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text=" "
                    android:textSize="25dp"
                    android:textStyle="bold"

                    >

                </Button>
                <Button
                    android:id="@+id/fr0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
                <Button
                    android:id="@+id/equl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap1"
                    android:layout_margin="17dp"
                    android:layout_weight="1"
                    android:text="="
                    android:textSize="25dp"
                    android:textStyle="bold"
                    >

                </Button>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>